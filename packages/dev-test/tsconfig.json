{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],

  "compilerOptions": {
    "baseUrl": ".",
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": ["./src/*"],
      "vue-plus": [
        "../vue-plus/src/index.ts",
        "../vue-plus/dist"
      ],
      "vue-plus/*": [
        "../vue-plus/src/*",
        "../vue-plus/dist/*"
      ]
    }
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
